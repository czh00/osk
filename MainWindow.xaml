<Window x:Class="OSK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OSK" Height="330" Width="1000" 
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="{Binding WindowBackground}" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="NoResize" Name="RootWindow">
    <Window.Resources>
        <Style x:Key="KeyButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{Binding TextColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <!-- çµ±ä¸€æŒ‰éµé–“è· -->
            <Setter Property="Margin" Value="2,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- å³ä¸‹è§’ Resize Gripï¼šç¶å®š ResizeGripColor -->
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="25" Height="25" Cursor="SizeNWSE" MouseLeftButtonDown="Resize_Init" MouseMove="Resize_Move" MouseLeftButtonUp="Resize_End" Panel.ZIndex="100" Background="Transparent">
            <Path Data="M0,25 L25,25 L25,0 Z" Fill="{Binding ResizeGripColor}"/>
            <Path Data="M10,25 L25,10 M15,25 L25,15 M20,25 L25,20" Stroke="{Binding ResizeGripColor}" StrokeThickness="1"/>
        </Grid>
        <Grid Margin="1,1,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                <!-- ä¸»é¡Œåˆ‡æ›æŒ‰éˆ•ï¼šç¶å®š UiTextColor -->
                <Button Command="{Binding ToggleThemeCommand}" 
                        Content="{Binding ThemeIcon}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{Binding UiTextColor}"
                        FontSize="16"
                        Margin="0,0,10,0"
                        ToolTip="åˆ‡æ› æ·±è‰²/æ·ºè‰² æ¨¡å¼" />
                
                <!-- é€æ˜Žåº¦æ–‡å­—ï¼šç¶å®š UiTextColor -->
                <TextBlock Text="é€æ˜Žåº¦: " Foreground="{Binding UiTextColor}" VerticalAlignment="Center"/>
                
                <!-- Sliderï¼šç¶å®š Foreground ä¾†æŽ§åˆ¶åˆ»åº¦é¡è‰² (å¦‚æžœæœ‰é¡¯ç¤ºåˆ»åº¦)ï¼Œä¸»è¦ä¾é æ»‘è»Œæ¨£å¼ -->
                <Slider x:Name="OpacitySlider" IsMoveToPointEnabled="True" 
                        Value="{Binding Opacity, ElementName=RootWindow}" 
                        Minimum="0.2" Maximum="1.0" Width="80" VerticalAlignment="Center" Focusable="true" Margin="5,0,10,0"
                        Foreground="{Binding UiTextColor}"/>
                
                <!-- æœ€å°åŒ–æŒ‰éˆ•ï¼šæ–‡å­—ç¶å®š UiTextColorï¼ŒèƒŒæ™¯ç¶å®š ControlBtnBackground -->
                <Button Content=" ðŸ—• " Click="Minimize_Click" Width="30" Height="25" Margin="0,0,2,0" 
                        Background="{Binding ControlBtnBackground}" 
                        Foreground="{Binding UiTextColor}"
                        FontWeight="Bold" BorderThickness="0"/>
                
                <!-- é—œé–‰æŒ‰éˆ•ï¼šç¶­æŒç´…è‰²èƒŒæ™¯ï¼Œæ–‡å­—å›ºå®šç™½è‰²ï¼Œç¢ºä¿è­¦ç¤ºæ„å‘³ -->
                <Button Content=" âœ• " Click="Exit_Click" Width="30" Height="25" Margin="2,0,0,0" 
                        Background="#993333" 
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
            <Viewbox Grid.Row="10" Stretch="Uniform" VerticalAlignment="Top">
                <ItemsControl Name="KeyBoardItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource KeyButtonStyle}"
                                                Background="{Binding Background}"
                                                Width="{Binding Width}"
                                                Height="55"
                                                Command="{Binding DataContext.KeyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <Viewbox Stretch="Uniform" StretchDirection="Both">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           TextAlignment="Center" 
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding TextColor}" />
                                            </Viewbox>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
